{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/store/counter.js",
        "database/src/controller/UserInfoController.ts",
        "database/src/entity/UserInfo.ts",
        "database/src/entity/RepeatInfo.ts",
        "database/src/entity/PriorityInfo.ts",
        "database/src/entity/PlanInfo.ts",
        "database/src/entity/GroupInfo.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}